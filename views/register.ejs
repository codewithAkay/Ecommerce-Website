  <script>
    const shoppingBagIcons = document.querySelectorAll('.bx-shopping-bag');

shoppingBagIcons.forEach(icon => {
  icon.addEventListener('click', () => {
    const produits = icon.parentNode;
    const name = produits.querySelector('.titre').textContent;
    const price = produits.querySelector('.prix').textContent;

    fetch('/cart/add', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ name, price })
    })
    .then(response => response.json())
    .then(data => console.log(data)); // Handle response from server
  });
});

  </script>